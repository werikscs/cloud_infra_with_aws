{
  "name": "cloud_infra_with_aws",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "update:test-db-schema": "node ./copyPrismaSchema.mjs && DATABASE_URL_TEST=\"file:../tests/db/dev.db\" npx prisma db push --schema prisma/schema.prisma.dev",
    "test:watch": "DATABASE_URL_TEST=\"file:../tests/db/dev.db\" vitest --passWithNoTests",
    "test:once": "npm run test:watch -- run",
    "test:coverage": "npm run test:once -- --coverage",
    "build:clean": "rm -rf ./build",
    "build:transpile": "tsc -p ./tsconfig.prod.json",
    "start:prod": "node ./build/server.js",
    "prisma:reset": "npx prisma migrate reset --force",
    "start:prod:container": "npm run prisma:reset && npm run start:prod",
    "watch:local": "npx nodemon --watch ./src -e ts,js --exec \"npm run build:transpile\"",
    "watch:container": "npm run prisma:reset && npx nodemon --watch ./build -e ts,js --watch ./prisma -e \"*\" --exec \"npm run start:prod & npx prisma studio & wait\""
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.1.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@vitest/coverage-istanbul": "^2.0.5",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2"
  }
}
