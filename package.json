{
  "name": "cloud_infra_with_aws",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test:once": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "build:clean": "rm -rf ./build",
    "build:transpile": "tsc -p ./tsconfig.prod.json",
    "start:dev": "npx nodemon",
    "start:preview": "npm run build:clean && npm run build:transpile && node ./build/server.js",
    "start:prod": "node ./build/server.js",
    "watch:local": "npx nodemon --watch ./src -e ts,js --exec \"npm run build:transpile\"",
    "watch:container": "npx nodemon --watch ./build -e ts,js --exec \"npm run start:prod\""
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.1.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "nodemon": "^3.1.4"
  }
}