{
  "compilerOptions": {
    "types": ["node", "vitest/globals"],
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "baseUrl": "./",
    "rootDirs": ["src", "tests"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests", "vite.config.ts"],
  "exclude": ["node_modules", "build"]
}
